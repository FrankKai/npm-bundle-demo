{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "DOM"
    ],
    "jsx": "react",
    "outDir": "./dist/cjs",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true
  }
}